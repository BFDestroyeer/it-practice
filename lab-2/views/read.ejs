<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Прочитать</title>
    <link href="./css/style.css" rel="stylesheet" />
</head>
<body>
    <%- include('navigation') %>
    <div>
        <% for (let record of records) { %>
            <form>
                <fieldset>
                    <legend><%=template.name %></legend>
                    <% for (let [key, value] of Object.entries(template)) { %>
                        <% if ((key == 'name') || (key == 'resources')) continue %>
                        <%=key %>: <input value="<%= record.find(val => val['name'] == key && val['resource'] == 'main')['value'] %>" disabled>
                    <% } %>
                    <% for(let resource of template.resources) { %>
                        <fieldset>
                            <legend><%=resource.name %></legend>
                            <% for (let [key, value] of Object.entries(resource)) { %>
                                <% if (key == "name") continue %>
                                <%=key %>: <input value="<%= record.find(val => val['name'] == key && val['resource'] == resource.name)['value'] %>" disabled>
                            <% } %>
                        </fieldset>
                    <% } %>
                </fieldset>
            </form>
        <% } %>
    </div>
    <%- include('footer') %>
</body>
</html>